<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Video Game Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/saved">Saved Articles </a>
      <a id="scrape" class="nav-item nav-link active" href="/scrape">Scrape New Articles
        <span class="sr-only">(current)</span>
      </a>
    </div>
  </div>
</nav>
<div class="container">

  <h3 id="banner">Articles courtesy of
    <a href="http://www.gamespot.com">
      <img src="/app/public/assets/img/sd-logo.png" alt="">
    </a>
  </h3>


  <ol>

    {{#each dbArticles}}

    <hr>
    <li>
      <a href={{link}}>
        <h5>{{title}} </a>
      {{#if saved}}
      <button data-id={{_id}} type="button" class="save btn btn-success">Saved</button>
      {{else}}
      <button data-id={{_id}} type="button" class="save btn btn-info">Save</button>
      {{/if}}
      </h5>

      <p>{{summary}}</p>

      {{#if comment}}
      <ul> Comment
        <hr>
        <li>
          <strong> {{comment.title}}</strong>
          <br> -{{comment.body}}
        </li>
        <hr>
      </ul>
      <button data-id={{_id}} type="button" data-toggle="modal" data-target="#update-modal" id="update-comment" class="btn btn-dark">Update Comment</button>
      {{else}}
      <button data-id={{_id}} type="button" data-toggle="modal" data-target="#comment-modal" id="add-comment" class="btn btn-dark">+ Comment</button>
      {{/if}}

      <hr>
    </li>
    {{/each}}

  </ol>

<footer>
 <strong> &copy; Christopher Etges 2018 </strong>
  <a id="footer-link" href="/articles">Articles API</a>
</footer>
</div>


<div class="modal" id="comment-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
        <div class="form-group">
          <label>New Comment</label>
          <input type="text" class="form-control" placeholder="Enter title" id="title">
        </div>
        <div class="input-group">
          <textarea class="form-control" aria-label="With textarea" placeholder="Enter comment" id="body"></textarea>
        </div>
        <br>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="submit btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="update-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
        <div class="form-group">
          <label>Update Comment</label>
          <input type="text" class="form-control" placeholder="Enter title" id="update-title">
        </div>
        <div class="input-group">
          <textarea class="form-control" aria-label="With textarea" placeholder="Enter comment" id="update-body"></textarea>
        </div>
        <br>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" id="save" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>